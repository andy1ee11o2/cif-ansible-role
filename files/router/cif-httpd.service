[Unit]
Description=cif-httpd service

[Service]
Type=simple
User=cif
Group=cif
PIDFile=/var/lib/cif/gunicorn.pid
ExecStart=/usr/local/bin/gunicorn -w 4 -b 0.0.0.0:5000 cif.httpd:app --log-level DEBUG --worker-class gevent --preload --max-requests 100 --keep-alive 75 --timeout 75 --log-level DEBUG --access-logfile /var/log/gunicorn/access.log --error-logfile /var/log/gunicorn/error.log --timeout 300 -p /var/run/cif/gunicorn.pid
KillMode=process
Restart=on-failure
KillSignal=SIGINT
TimeoutStopSec=15
LimitAS=infinity
LimitRSS=infinity
LimitCORE=infinity
LimitNOFILE=65536
Nice=-1


# https://coreos.com/os/docs/latest/using-environment-variables-in-systemd-units.html
EnvironmentFile=-/etc/cif.env

[Install]
WantedBy=multi-user.target
